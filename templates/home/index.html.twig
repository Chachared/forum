{% extends 'base.html.twig' %}

{% block title %}Forum (exam Symfony HB){% endblock %}

{% block body %}

    <div class="col-12 text-center mt-2">
        <h1> Hello c'est la page d'accueil</h1>
    </div>


<main>
    <div class="container">
        <div class="row">
        {% for article in articles %}
            <div class="card my-2 mx-2" style="width: 18rem;">
                <img src="{{ asset('uploads/articles/' ~ article.picture) }}" alt="{{article.title}}" class="img-index">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <p class="card-text">{{ article.content| u.truncate(100, '...') }}</p>
                    <a href="{{ path('show_article', {'id': article.id}) }}" class="btn btn-success rounded-pill">Voir l'article</a>
                </div>
            </div>
        {% else %}
            <h3>Nous n'avons trouv√© aucun article</h3>
        {% endfor %}
        </div>

{% endblock %}
