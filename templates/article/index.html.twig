{% extends 'base.html.twig' %}

{% block title %}Les articles{% endblock %}

{% block body %}
<header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center mt-2">
                <h1>Les articles</h1>
            </div>
            <div class="col-12 d-flex justify-content-center mt-2 mb-3">
                {% include 'parts/nav.html.twig' %}
            </div>
        </div>
    </div>
</header>
    <main>
    <div class="container">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td><img src="{{ article.picture }}" alt="{{article.title}}" class="img-index"></td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">voir</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Nous n'avons trouvé aucun article</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}" class="btn btn-success rounded-pill">Créer un article</a>
    </div>
    </main>
{% endblock %}
