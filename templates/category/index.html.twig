{% extends 'base.html.twig' %}

{% block title %}Les catégories{% endblock %}

{% block body %}
<header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center mt-2">
                <h1>Les catégories</h1>
            </div>
            <div class="col-12 d-flex justify-content-center mt-2 mb-3">
                {% include 'parts/nav.html.twig' %}
            </div>
        </div>
    </div>
</header>
    <main>
    <div class="container">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Désignation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.designation }}</td>
                <td>

                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Nous n'avons trouvé aucune catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}" class="btn btn-success rounded-pill">Créer une catégorie</a>
        </div>
    </main>
{% endblock %}
